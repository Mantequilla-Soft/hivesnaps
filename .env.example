# HiveSnaps Environment Configuration
# Copy this file to .env and fill in your actual values
# NOTE: .env is gitignored - never commit sensitive keys to version control!

# Base API URL (if using a custom backend)
EXPO_PUBLIC_BASE_API_URL=

# 3Speak API Keys
# Required for video and audio upload features
EXPO_PUBLIC_3SPEAK_API_KEY=your_3speak_api_key_here

# 3Speak Image Server Configuration
# Required for image upload fallback when images.hive.blog is unavailable
EXPO_PUBLIC_THREESPEAK_IMAGE_SERVER=https://images.3speak.tv
EXPO_PUBLIC_THREESPEAK_IMAGE_API_KEY=your_3speak_image_api_key_here

# Audio API Endpoint (optional, defaults to https://audio.3speak.tv)
EXPO_PUBLIC_AUDIO_API_ENDPOINT=https://audio.3speak.tv

# IPFS Configuration (optional, defaults to 3Speak IPFS)
EXPO_PUBLIC_IPFS_UPLOAD_ENDPOINT=https://ipfs.3speak.tv/api/v0/add
EXPO_PUBLIC_IPFS_GATEWAY_URL=https://ipfs.3speak.tv/ipfs

# Tenor GIF API Key (optional, for GIF picker functionality)
EXPO_PUBLIC_TENOR_API_KEY=your_tenor_api_key_here
